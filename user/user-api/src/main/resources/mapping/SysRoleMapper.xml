<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.uni.user.dao.SysRoleDao" >

    <select id="queryList" resultType="com.uni.user.entity.SysRoleEntity" parameterType="java.util.Map">
        select
        *
        from sys_role where 1=1
        <if test="roleName!=null and roleName!=''">
            and role_name=#{roleName}
        </if>
        <if test="startTime != null and startTime !=''">
            and create_time > #{startTime}
        </if>
        <if test="endTime != null and endTime !=''">
            and #{endTime} > create_time
        </if>
        <if test="status != null and status != ''">
            and status = #{status}
        </if>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
            <otherwise>
                order by id desc
            </otherwise>
        </choose>
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>
    <select id="queryTotal" resultType="java.lang.Integer" parameterType="java.util.Map">
        select
        count(id)
        from sys_role where 1=1
        <if test="roleName!=null and roleName!=''">
            and role_name=#{roleName}
        </if>
    </select>
</mapper>