<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.healthy.food.dao.FoodDayLogDao" >


    <sql id="sqlWhere">
        <if test="foodName != null and foodName.trim()!= ''">
            and a.`foodName` like '${foodName}%'
        </if>
        <if test="bodyName != null and bodyName.trim()!= ''">
            and a.`bodyName` like '${bodyName}%'
        </if>
        <if test="idFood != null ">
            and a.id_food = #{idFood}
        </if>
        <if test="idUser != null ">
            and a.id_user = #{idUser}
        </if>
        <if test="idFoodLog != null ">
            and a.id_food_log = #{idFoodLog}
        </if>
        <if test="idBody != null ">
            and a.id_body = #{idBody}
        </if>
        <if test="grubTime != null and grubTime.trim()!= '' ">
            and a.grub_time = #{grubTime}
        </if>
    </sql>

    <select id="queryList" resultType="com.healthy.food.entity.FoodDayLogEntity" parameterType="java.util.Map">
        select
        *
        from food_day_log a
        where 1=1
        <include refid="sqlWhere"></include>
        <choose>
            <when test="orderName != null and orderName.trim() != ''">
                order by ${orderName} ${order}
            </when>
            <otherwise>
                order by grub_time desc
            </otherwise>
        </choose>
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>
    <select id="queryTotal" resultType="java.lang.Integer" parameterType="java.util.Map">
        select
        count(id_food_log)
        from food_day_log a
        where 1=1
        <include refid="sqlWhere"></include>
    </select>


</mapper>